<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/black">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/customborder"
        android:paddingVertical="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/customborder2"/>

        <TextView
            android:id="@+id/Speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="149 KPH"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingVertical="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Position"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/customborder2"/>

        <TextView
            android:id="@+id/Position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingVertical="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laps"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/customborder2"/>

        <TextView
            android:id="@+id/Laps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5/25"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingVertical="5dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tyre Health"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/customborder2"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/Tyre_Health_FL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="25dp"
                android:textColor="@color/green"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/Tyre_Health_FR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="25dp"
                android:textColor="@color/green"
                android:textAlignment="center"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/Tyre_Health_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="25dp"
                android:textColor="@color/green"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/Tyre_Health_RR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="25dp"
                android:textColor="@color/green"
                android:textAlignment="center"
                android:layout_weight="1"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="@drawable/customborder">

        <TextView
            android:id="@+id/Gear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="120dp"
            android:textColor="@color/red"
            android:fontFamily="@font/lemon_milk"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/customborder">

            <TextView
                android:id="@+id/Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01:11.051"
                android:textSize="50dp"
                android:textColor="@color/white"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/LapDelta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+0.512"
                android:textSize="30dp"
                android:textColor="@color/red"
                android:textAlignment="center"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingVertical="10dp"
        android:background="@drawable/customborder">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Ahead"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/customborder2"/>

        <TextView
            android:id="@+id/Car_Ahead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.000"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingVertical="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Behind"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/customborder2"/>

        <TextView
            android:id="@+id/Car_Behind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.000"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:paddingVertical="10dp"/>



    </LinearLayout>




</LinearLayout>