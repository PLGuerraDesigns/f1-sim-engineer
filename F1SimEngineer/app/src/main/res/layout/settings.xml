<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/black">


    <TextView
        android:id="@+id/Page_Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:background="@color/dark_grey"
        android:paddingLeft="20dp"
        android:paddingVertical="5dp"/>

    <LinearLayout
        android:id="@+id/IP_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Page_Label"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="50dp">

    <TextView
        android:id="@+id/IP_Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device IP:"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/IP_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text=""
        android:textColor="@color/white"
        android:textSize="23dp"
        android:layout_weight="1"
        android:alpha="0.8"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Port_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/IP_layout"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/Port_Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Port:"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/Port_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="20777"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:layout_weight="1"
        android:alpha="0.8"
        android:maxLength="10"/>

    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/Port_layout"
        android:layout_alignRight="@id/Port_layout"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="50dp"
        android:textColor="#FFFFFF"
        android:background="@color/dark_grey"/>


</RelativeLayout>